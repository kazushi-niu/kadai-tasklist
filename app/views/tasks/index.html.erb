<h1><%= current_user.name %>のタスク一覧</h1>
<% if @tasks.any? %>
  <!-- タスクテーブル -->
  <table class="table tale-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>タスク</th>
        <th>ステータス</th>
    </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<!-- タスク登録ボタン -->
<%= link_to '新規タスクの登録', new_task_path, class: "btn btn-primary" %>

